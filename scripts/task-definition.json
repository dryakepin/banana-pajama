{
  "family": "banana-pajama-production-game",
  "cpu": "512",
  "memory": "1024",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "executionRoleArn": "arn:aws:iam::356225521833:role/banana-pajama-production-ecs-s-ECSTaskExecutionRole-byR6NJLu4UlX",
  "taskRoleArn": "arn:aws:iam::356225521833:role/banana-pajama-production-ecs-s-ECSTaskExecutionRole-byR6NJLu4UlX",
  "containerDefinitions": [
    {
      "name": "client",
      "image": "356225521833.dkr.ecr.us-east-1.amazonaws.com/banana-pajama-client:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/banana-pajama-production-client",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "client"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "wget --no-verbose --tries=1 --spider http://localhost || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "dependsOn": [
        {
          "containerName": "server",
          "condition": "HEALTHY"
        }
      ]
    },
    {
      "name": "server",
      "image": "356225521833.dkr.ecr.us-east-1.amazonaws.com/banana-pajama-server:latest",
      "essential": true,
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "3000"
        }
      ],
      "secrets": [
        {
          "name": "DB_HOST",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:356225521833:secret:banana-pajama-production-database-secret-TsfbGs:host::"
        },
        {
          "name": "DB_PORT",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:356225521833:secret:banana-pajama-production-database-secret-TsfbGs:port::"
        },
        {
          "name": "DB_NAME",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:356225521833:secret:banana-pajama-production-database-secret-TsfbGs:dbname::"
        },
        {
          "name": "DB_USER",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:356225521833:secret:banana-pajama-production-database-secret-TsfbGs:username::"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:356225521833:secret:banana-pajama-production-database-secret-TsfbGs:password::"
        },
        {
          "name": "SESSION_SECRET",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:356225521833:secret:banana-pajama-production-app-secrets-fnmyBr:session_secret::"
        },
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:356225521833:secret:banana-pajama-production-app-secrets-fnmyBr:jwt_secret::"
        },
        {
          "name": "CORS_ORIGIN",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:356225521833:secret:banana-pajama-production-app-secrets-fnmyBr:cors_origin::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/banana-pajama-production-server",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "server"
        }
      },
      "healthCheck": {
        "command": [
          "CMD",
          "node",
          "healthcheck.js"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}