# Banana Pajama Zombie Shooter - Local Development Environment
# Copy this file to .env and adjust values as needed

# Database Configuration
DB_PASSWORD=banana_dev_password_change_me
DB_HOST=database
DB_PORT=5432
DB_NAME=banana_pajama
DB_USER=postgres

# Server Configuration
NODE_ENV=development
PORT=3000
SESSION_SECRET=dev_session_secret_change_in_production_very_important

# CORS Configuration
CORS_ORIGIN=http://localhost:8080

# Optional: Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: Logging level
LOG_LEVEL=info

# Development tools
ENABLE_ADMINER=true

# Production-like settings (for testing)
# Uncomment these for production-like testing
# NODE_ENV=production
# CORS_ORIGIN=https://yourdomain.com
# SESSION_SECRET=very_secure_random_string_at_least_32_chars